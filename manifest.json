{
  "manifest_version": 3,
  "name": "Context Finder",
  "version": "1.0",
  "description": "Finds, logs, and speaks context element text",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://api.openai.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [{
    "resources": ["popup.css"],
    "matches": ["<all_urls>"]
  }],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "config.js",
        "speech-service.js",
        "content-manager.js",
        "content.js"
      ]
    }
  ]
} 