{
  "manifest_version": 3,
  "name": "Context Finder",
  "version": "1.0",
  "description": "Finds and shows content of #context element",
  "permissions": [
    "activeTab", 
    "storage",
    "unlimitedStorage"
  ],
  "host_permissions": ["https://api.openai.com/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["config.js", "speech.js", "content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
} 